<Window x:Class="ClockOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClockOverlay"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="時計" Height="150" Width="300" Topmost="True">
    <Grid>
        <Viewbox HorizontalAlignment="Center" Visibility="Visible">
            <TextBlock x:Name="clock" FontFamily="Segoe" Text="00:00" Foreground="Gray" FontWeight="Bold"/>
        </Viewbox>
    </Grid>
</Window>
